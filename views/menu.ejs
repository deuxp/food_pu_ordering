<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Pls</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/menu-item.css" type="text/css" />
  <link rel="shortcut icon" type="image/jpg" href="/assets/imgs/favicon.png">

  <!-- fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;1,300&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap" rel="stylesheet">

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script src="https://kit.fontawesome.com/a621cad602.js" crossorigin="anonymous"></script>

</head>

<body>
  <%- include('partials/_nav') %>
    <main class="menu-container">
      <div class="menu-items">
        <% let count=0; %>
          <% for (let item of items) { %>
            <% count++; %>
              <section class="menu-item">
                <div class="menu-item-top">
                  <div class="menu-item-details-left">
                    <h3 class="menu-item-name">
                      <%= item.name %>
                    </h3>
                    <p class="menu-item-description">
                      <%= item.description %>
                    </p>
                    <output class="menu-item-price" name=<%=item.price %> > $<%= item.price/100 %></output>
                  </div>
                  <div class="menu-item-details-right-picture">
                    <img src=<%=item.thumbnail %> alt="<%= item.thumbnail %>">
                  </div>
                </div>
                <div class="menu-item-bottom">
                  <textarea name="instructions" id="instructions" rows="2" cols="50" maxlength="100"
                    placeholder="Special instructions for the restaurant?"></textarea>
                  <div class="menu-item-bottom-add-to-cart">
                    <label for="quantity">Quantity:</label>
                    <input class="quantity" type="number" id="quantity" name="quantity" value=1 min=1 max=20>
                    <button class="add-to-cart-button" id="<%= count %>">Add to Cart</button>
                  </div>
                </div>
              </section>
              <% }; %>
      </div>
      <div id="order-summary">
        <div id="cart">
        <h2> My Cart</h2>
        <table class="table table-responsive table-borderless" id="ordered-items">
          <tr>
            <th> Name </th>
            <th> Quantity </th>
            <th> Price </th>
          </tr>
        </table>
        <button id="place-order-button" style="max-width: 8em;"> Place Order</button>
        <div class="thank-you hidden">Your order has been placed :)</div>
      </div>
    </div>



    </main>
</body>

</html>
