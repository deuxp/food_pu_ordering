<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/chefs.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/chefApp.js"></script>

  <!-- fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;1,300&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap" rel="stylesheet">
</head>

<body>

  <nav>
    <span id="logo">YUMRs</span>
    <div class="left-bar">
      <span id="new-tweet">
        <button id="menu-button">menu</button>
      </span>
    </div>
  </nav>

  <main class="chef-container">

    <article class="chit hidden"></article>


    <div class="status-entry">

      <!-- PENDING: route to /pending of chefsPage.js will take care of twilio -->
      <div class="order-select-container">
        <!-- <form>
          <label for="order">order #</label>
          <input type="text" name="order" id="order-number">
        </form> -->
        <label for="order-select">ORDER #</label>
        <select name="order-select" id="order-select">

          <% orderList.forEach(order => { %>
            <option value=""> <%= order %> </option>
            <% }) %>
          </select>
          <button type="submit" class="pending-button">order up</button>

      </div>

      <!-- pick up time _> sends SMS-->
      <div class="minue-entry">
        <div class="entry-container">
          <label for="minutes">Minutes:</label>
          <input type="number" id="minutes" name="minutes"
                 min="1" max="180">

          <div class="button-cup">
            <button id="five-button">+5</button>
            <button id="ten-button">+10</button>
          </div>
        </div>
          <button id="time-remaining-enter">Send</button>
      </div>

      <!-- ready button -- a form with no field -->
      <div class="ready">
        <form>
        <!-- <form action="/chefsPage/ready" method="POST"> -->

          <button type="submit" class="ready-button">READY!</button>
        </form>
      </div>
    </div>
  </main>

</body>

</html>
