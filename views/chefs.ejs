<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/chefs.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;1,300&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap" rel="stylesheet">
</head>

<body>

  <nav>
    <span id="logo">YUMRs</span>
    <div class="left-bar">
      <span id="new-tweet">
        <button id="menu-button">menu</button>
      </span>
    </div>
  </nav>

  <main class="chef-container">
    <div class="order-view">
      <p>hello i am red</p>
    </div>

    <div class="status-entry">

      <!-- PENDING: route to /pending of chefsPage.js will take care of twilio -->
      <div class="pending">
        <form action="/chefs/pending" method='POST'>
          <label for="order">order #</label>
          <input type="text" name="order">
          <button type="submit">Submit</button>
        </form>
      </div>

      <!-- pick up time _> sends SMS-->
      <div class="pickup">
        <form action="/chefsPage/pickup" method='POST'>
          <label for="pickup">how long ?</label>
          <input type="text" name="pickup">
          <button type="submit">Submit</button>
        </form>

      </div>

      <!-- ready button -- a form with no field -->
      <div class="ready">
        <form>
        <!-- <form action="/chefsPage/ready" method="POST"> -->

          <button type="submit" class="ready-button">READY!</button>
        </form>
      </div>
    </div>
  </main>

</body>

</html>
